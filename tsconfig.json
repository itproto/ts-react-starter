{
  "compilerOptions": {
    "outDir": "build/dist",

    "moduleResolution": "node",

    "module": "esnext",
    "target": "es2015",
    "lib": ["es2017", "dom"],

    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@dux/*": ["src/dux/*"]
    },
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
